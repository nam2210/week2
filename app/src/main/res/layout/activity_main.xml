<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.exercise2.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/ivBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/shutterstock_130125752_huge"
            />
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="KHTN_DTVT"
            android:textColor="@color/pink"
            android:textSize="20sp"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_edit_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/edit_background"/>

    <Button
        android:id="@+id/btn_edit_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/edit_title"/>

</LinearLayout>
